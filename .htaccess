<IfModule mod_rewrite.c>
    RewriteEngine On

    # ------------------------------------------------------------------
    # 1. Force HTTPS (even behind proxy â€“ checks X-Forwarded-Proto)
    # ------------------------------------------------------------------
    RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ------------------------------------------------------------------
    # 2. Route all requests to /public (Laravel entry point)
    # ------------------------------------------------------------------
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]

    # ------------------------------------------------------------------
    # 3. Optional: Add trailing slash to directories (clean URLs)
    # ------------------------------------------------------------------
    # RewriteCond %{REQUEST_FILENAME} !-f
    # RewriteCond %{REQUEST_URI} !#.*# [NC]
    # RewriteCond %{REQUEST_URI} !(.*)/$
    # RewriteRule ^(.*)$ $1/ [L,R=301]
</IfModule>

# ------------------------------------------------------------------
# Security: Prevent directory listing & hide .env
# ------------------------------------------------------------------
Options -Indexes
<Files .env>
    Order allow,deny
    Deny from all
</Files>
